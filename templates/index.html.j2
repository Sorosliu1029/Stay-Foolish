<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="./main.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#books" aria-controls="books" role="tab" data-toggle="tab">Books</a>
                        </li>
                        <li role="presentation">
                            <a href="#courses" aria-controls="courses" role="tab" data-toggle="tab">Courses</a>
                        </li>
                        <li role="presentation">
                            <a href="#movies" aria-controls="movies" role="tab" data-toggle="tab">Movies</a>
                        </li>
                        <li role="presentation">
                            <a href="#games" aria-controls="games" role="tab" data-toggle="tab">Games</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="books">
                            <div class="panel panel-info">
                                <div class="panel-heading">Books I read. Count: {{ books|count }}</div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Cover</th>
                                            <th>Title</th>
                                            <th>Rating</th>
                                            <th>Read Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {%- for book in books %}
                                            <tr>
                                                <td><img src="{{ book.cover_url }}" alt="{{ book.title }}" width="50px" /></td>
                                                <td><a href="{{ book.douban_link }}" rel="nofollow" target="_blank">{{ book.title }}</a></td>
                                                <td>{{ book.rate * 'üëç' }}</td>
                                                <td>{{ book.date }}</td>
                                            </tr>
                                        {%- endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="courses">
                            <div class="panel panel-info">
                                <div class="panel-heading">Courses I took. Count: {{ courses|count }}</div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Platform</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {%- for course in courses %}
                                        <tr>
                                            <td>{{ course.name }}</td>
                                            <td>{{ course.platform }}</td>
                                        </tr>
                                    {%- endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="movies">
                            <div class="panel panel-info">
                                <div class="panel-heading">Movies I watched. Count: {{ movies|count }}</div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Poster</th>
                                            <th>Title</th>
                                            <th>Rating</th>
                                            <th>Watched Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {%- for movie in movies %}
                                            <tr>
                                                <td><img src="{{ movie.poster_url }}" alt="{{ movie.title }}" width="50px" /></td>
                                                <td><a href="{{ movie.douban_link }}" rel="nofollow" target="_blank">{{ movie.title }}</a></td>
                                                <td>{{ movie.rate * 'üëç' }}</td>
                                                <td>{{ movie.date }}</td>
                                            </tr>
                                        {%- endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="games">
                            <div class="panel panel-info">
                                <div class="panel-heading">Games I played. Count: {{ games|count }}</div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Rating</th>
                                            <th>Platform</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {%- for game in games %}
                                        <tr>
                                            <td>
                                                {%- if game.en_name is not none -%} 
                                                    {{ game.en_name }}
                                                {%- endif -%}
                                                {%- if game.en_name is not none and game.cn_name is not none -%} 
                                                    {{ ' / ' }}
                                                {%- endif -%}
                                                {%- if game.cn_name is not none -%}
                                                    {{ game.cn_name }}
                                                {%- endif -%}
                                            </td>
                                            <td>{{ game.rate * 'üëç' }}</td>
                                            <td>
                                                {% if game.itunes is not none -%} 
                                                    <img src="apple.png" alt="apple icon" width="14px" />
                                                    <a href="{{ game.itunes }}" target="_blank">Link</a>
                                                {%- endif %}
                                                {% if game.itunes is not none and game.steam is not none -%} 
                                                    {{ ' / ' }}
                                                {%- endif %}
                                                {% if game.steam is not none -%} 
                                                    <img src="steam.png" alt="steam icon" width="14px" />
                                                    <a href="{{ game.steam }}" target="_blank">Link</a>
                                                {%- endif %}
                                            </td>
                                        </tr>
                                        {%- endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>